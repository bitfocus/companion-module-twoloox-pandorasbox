{
  "name": "companion-module-twoloox-pandorasbox",
  "version": "3.0.0",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "prepare": "husky",
    "build": "rimraf dist && yarn build:main",
    "build:main": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint:raw": "eslint",
    "lint": "run lint:raw .",
    "dist": "yarn companion-module-build"
  },
  "license": "MIT",
  "prettier": "@companion-module/tools/.prettierrc.json",
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "run prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "run lint:raw --fix"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@companion-module/base": "~1.12.0"
  },
  "devDependencies": {
    "@companion-module/tools": "^2.4.2",
    "@types/node": "^22.15.21",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "packageManager": "yarn@4.9.1"
}
